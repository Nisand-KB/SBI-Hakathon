<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="17sp"
    android:id="@+id/username"
    android:text="Username              :"/>
    <TextView
        android:id="@+id/usernametext"
       android:layout_toRightOf="@id/username"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Username"/>
    <android.support.v4.widget.Space
        android:id="@+id/usspace"
        android:layout_below="@id/usernametext"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/acctno"
        android:layout_below="@id/usspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Account Number :"/>
    <TextView
        android:id="@+id/accountno_text"
        android:layout_toRightOf="@id/acctno"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/usspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="accountno"/>
    <android.support.v4.widget.Space
        android:id="@+id/acnospace"
        android:layout_below="@id/acctno"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/aadharno"
        android:layout_below="@id/acnospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Aadhar Number   :"/>
    <TextView
        android:id="@+id/aadharno_text"
        android:layout_toRightOf="@id/aadharno"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/acnospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="aadharno"/>
    <android.support.v4.widget.Space
        android:id="@+id/aadspace"
        android:layout_below="@id/aadharno"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
</RelativeLayout>