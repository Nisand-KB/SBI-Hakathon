<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/white"
                android:orientation="vertical"
                android:elevation="7dp"
                android:padding="8dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/name_layout"
                    android:layout_marginBottom="16dp"
                    app:counterOverflowTextAppearance="@style/EditTextLayout"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/username_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:hint="Name"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:inputType="text" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/accountno_layout"
                    app:hintTextAppearance="@style/EditTextLayout"
                    android:layout_marginBottom="16dp"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/accountno_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="AccountNumber"
                        android:digits="0123456789"
                        android:textColor="@color/colorPrimary"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/aadharno_layout"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="16dp"
                    app:hintTextAppearance="@style/EditTextLayout"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/aadharno_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="AadharNumber"
                        android:digits="0123456789"
                        android:textColor="@color/colorPrimary"
                        android:inputType="number" />
                </android.support.design.widget.TextInputLayout>

                <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />



            </LinearLayout>
