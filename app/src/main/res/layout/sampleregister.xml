<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent">
    <include layout="@layout/toolbar"
        app:layout_collapseMode="parallax"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/sample_register_toolbar"/>
    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:id="@+id/toplayout"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="200dp"
            android:src="@drawable/upload"
            android:elevation="9dp"
            android:id="@+id/upload_img"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/infotext"
            android:layout_below="@id/upload_img"
            android:text="@string/upload_instruction"
            android:layout_centerHorizontal="true"/>
        <include layout="@layout/register_bottompart"
            android:layout_width="match_parent"
            android:id="@+id/register_bottom"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/infotext"
            android:elevation="7dp"
            />
    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_white"
        app:layout_anchor="@id/infotext"
        card_view:layout_anchorGravity="bottom|right"
        android:layout_marginRight="10dp"
        app:fabSize="normal"/>
    </android.support.design.widget.CoordinatorLayout>
</ScrollView>